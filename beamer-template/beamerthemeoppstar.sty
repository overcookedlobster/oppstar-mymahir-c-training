% Oppstar Beamer Theme
% Main theme file that loads all components
\ProvidesPackage{beamerthemeoppstar}[2025/01/01 Oppstar Beamer Theme]

\mode<presentation>

% Load the theme components
\usecolortheme{oppstar}
\usefonttheme{oppstar}
\useinnertheme{oppstar}
\useoutertheme{oppstar}

% Additional packages for enhanced functionality
\RequirePackage{tikz}
\RequirePackage{xcolor}

% Theme options
\DeclareOptionBeamer{progressbar}{\def\beamer@oppstar@progressbar{#1}}
\DeclareOptionBeamer{numbering}{\def\beamer@oppstar@numbering{#1}}
\DeclareOptionBeamer{titleformat}{\def\beamer@oppstar@titleformat{#1}}

% Process options
\ProcessOptionsBeamer

% Set some default Beamer options for a clean look
\setbeamertemplate{blocks}[rounded][shadow=false]
\setbeamertemplate{items}[triangle]
\setbeamertemplate{sections/subsections in toc}[square]

% Disable the default Beamer navigation symbols
\setbeamertemplate{navigation symbols}{}

% Set margins to account for positioned elements
% Left margin: 2.5cm to clear the 1cm blue square + upper middle image + 0.5cm spacing
% Right margin: 2.5cm to match left margin for centered content
\setbeamersize{text margin left=1.5cm,text margin right=1.5cm}

% Custom commands for the theme
\newcommand{\oppstarlogo}[1]{\logo{\includegraphics[height=0.8cm]{#1}}}

% Commands to set custom images
\newcommand{\oppstarupperrightimage}[1]{\def\oppstarupperright{#1}}
\newcommand{\oppstaruppermiddleimage}[1]{\def\oppstaruppermiddle{#1}}
\newcommand{\oppstarbottomrightimage}[1]{\def\oppstarbottomright{#1}}
\newcommand{\oppstarbottomleftimage}[1]{\def\oppstarbottomleft{#1}}

% Custom title page command
\newcommand{\oppstartitlepage}{
  \begin{frame}[plain]
    \titlepage
  \end{frame}
}

% Custom section page command
\newcommand{\oppstarsectionpage}{
  \begin{frame}[plain]
    \sectionpage
  \end{frame}
}

\mode<all>


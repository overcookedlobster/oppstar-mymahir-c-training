% Oppstar Beamer Font Theme
% Professional typography for the Oppstar template
\ProvidesPackage{beamerfontthemeoppstar}[2025/01/01 Oppstar Beamer Font Theme]

\mode<presentation>

% Use modern, clean fonts
\RequirePackage[T1]{fontenc}
\RequirePackage{lmodern}
\RequirePackage{helvet} % Helvetica-like font for sans serif

% Set the main font family to sans serif for a modern look
\renewcommand{\familydefault}{\sfdefault}

% Title fonts - bold and prominent
\setbeamerfont{title}{size=\LARGE,series=\bfseries}
\setbeamerfont{subtitle}{size=\large,series=\normalfont}
\setbeamerfont{author}{size=\normalsize,series=\normalfont}
\setbeamerfont{institute}{size=\small,series=\normalfont}
\setbeamerfont{date}{size=\small,series=\normalfont}

% Frame title fonts
\setbeamerfont{frametitle}{size=\Large,series=\bfseries}
\setbeamerfont{framesubtitle}{size=\large,series=\normalfont}

% Section and subsection fonts
\setbeamerfont{section in toc}{size=\normalsize,series=\bfseries}
\setbeamerfont{subsection in toc}{size=\small,series=\normalfont}

% Block fonts
\setbeamerfont{block title}{size=\normalsize,series=\bfseries}
\setbeamerfont{block body}{size=\small,series=\normalfont}

% Item fonts
\setbeamerfont{itemize/enumerate body}{size=\normalsize}
\setbeamerfont{itemize/enumerate subbody}{size=\small}
\setbeamerfont{itemize/enumerate subsubbody}{size=\footnotesize}

% Caption fonts
\setbeamerfont{caption}{size=\footnotesize,series=\normalfont}
\setbeamerfont{caption name}{size=\footnotesize,series=\bfseries}

% Footer fonts
\setbeamerfont{footline}{size=\tiny,series=\normalfont}

% Bibliography fonts
\setbeamerfont{bibliography entry author}{size=\footnotesize,series=\normalfont}
\setbeamerfont{bibliography entry title}{size=\footnotesize,series=\bfseries}
\setbeamerfont{bibliography entry location}{size=\footnotesize,series=\normalfont}
\setbeamerfont{bibliography entry note}{size=\footnotesize,series=\normalfont}

% Ensure consistent line spacing
\linespread{1.1}

\mode<all>

